<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="@{mapperClassName}">
    <resultMap id="BaseResultMap" type="@{domainClassName}">
		<ourbatis:foreach list="primaryColumns" var="elem" >
			<id column="@{elem.jdbcName}" jdbcType="@{elem.jdbcType}" property="@{elem.javaName}" />
		</ourbatis:foreach>
		<ourbatis:foreach list="normalColumns" var="elem" >
			<result column="@{elem.jdbcName}" jdbcType="@{elem.jdbcType}" property="@{elem.javaName}" />
		</ourbatis:foreach>
    </resultMap>

   <sql id="Base_Column_List">
   		<ourbatis:foreach list="allColumns" var="elem" split="," >
			`@{elem.jdbcName}`
		</ourbatis:foreach>
    </sql>
    
     <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterType="java.lang.Object" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from @{tableName}
        where 1 = 1 
        <ourbatis:foreach list="primaryColumns" var="elem" >
        	and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
		</ourbatis:foreach>
    </select>
    <!-- 根据实体查询单条 -->
    <select id="selectByEntity" parameterType="@{domainClassName}" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from @{tableName}
        where 1 = 1
        <ourbatis:foreach list="allColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
            	and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
       	 	</if>
		</ourbatis:foreach>
        limit 1
    </select>
    
    <!-- 根据实体查询多条 -->
    <select id="selectByEntityList" parameterType="@{domainClassName}" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from @{tableName}
        where 1 = 1
         <ourbatis:foreach list="allColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
	            and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
	        </if>
		</ourbatis:foreach>
    </select>
    
     <!-- 根据实体查询ID -->
    <select id="selectById" parameterType="@{domainClassName}" resultType="java.lang.String">
        select 
        <ourbatis:foreach list="primaryColumns" var="elem" split=",">
			`@{elem.jdbcName}`
		</ourbatis:foreach>
         from @{tableName}
        where 1 = 1
        <ourbatis:foreach list="allColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
	            and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
	        </if>
		</ourbatis:foreach>
         limit 1
    </select>
    
       <!-- 根据实体查询IDs-->
    <select id="selectByIds" parameterType="@{domainClassName}" resultType="java.lang.String">
        select 
 		<ourbatis:foreach list="primaryColumns" var="elem" split=",">
			`@{elem.jdbcName}`
		</ourbatis:foreach>
        from @{tableName}
        where 1 = 1
        <ourbatis:foreach list="normalColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
	            and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
	        </if>
		</ourbatis:foreach>
    </select>
    
    <!-- 根据主键删除 -->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Object">
        delete 
		from @{tableName} 
		where 1=1 
		<ourbatis:foreach list="primaryColumns" var="elem" >
			and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
		</ourbatis:foreach>
    </delete>
	
    <!--  插入单条记录（全字段）  -->
    <insert id="insert" parameterType="@{domainClassName}" >
        insert into @{tableName}
        <trim prefix="(" suffix=")" suffixOverrides=",">
			<ourbatis:foreach list="allColumns" var="elem" split=",">
		        `@{elem.jdbcName}`
			</ourbatis:foreach>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<ourbatis:foreach list="allColumns" var="elem" split="," >
		        #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
			</ourbatis:foreach>
        </trim>
    </insert>
	
       <!--  插入单条记录（字段为空则不添加）  -->
    <insert id="insertSelective" parameterType="@{domainClassName}" >
        insert into @{tableName}
        <trim prefix="(" suffix=")" suffixOverrides=",">
			<ourbatis:foreach list="allColumns" var="elem" split=",">
				<if test="@{elem.javaName} != null" >
		            `@{elem.jdbcName}`
		        </if>
			</ourbatis:foreach>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<ourbatis:foreach list="allColumns" var="elem" split="," >
				<if test="@{elem.javaName} != null" >
		            #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
		        </if>
			</ourbatis:foreach>
        </trim>
    </insert>
	
   <!-- 根据主键修改  -->
    <update id="updateByPrimaryKey" parameterType="@{domainClassName}">
        update @{tableName}
        <set>
        <ourbatis:foreach list="normalColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
	            `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}},
	        </if>
		</ourbatis:foreach>
        </set>
        where 1=1 
        <ourbatis:foreach list="primaryColumns" var="elem" >
			and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
		</ourbatis:foreach>
    </update>
    
       <!--批量插入-->
    <insert id="insertBatch" parameterType="java.util.List" >  
        insert into @{tableName}
        <trim prefix="(" suffix=")" suffixOverrides=",">
			<ourbatis:foreach list="allColumns" var="elem" split=",">
				<if test="@{elem.javaName} != null" >
		            `@{elem.jdbcName}`
		        </if>
			</ourbatis:foreach>
        </trim>
        values 
        <foreach collection="list" index="index" item="item" separator=",">  
	        <trim prefix="(" suffix=")" suffixOverrides=",">
		        <ourbatis:foreach list="allColumns" var="elem" split="," >
					#{item.@{elem.javaName},jdbcType=@{elem.jdbcType}}
				</ourbatis:foreach>
	        </trim>
        </foreach>
      </insert>
     <!--批量修改-->
    <update id="updateBatch" parameterType="java.util.List">  
        <foreach  collection="list" index="index" item="item"  separator=";">     
           update @{tableName}
	        set 
	        <ourbatis:foreach list="normalColumns" var="elem" >
				`@{elem.jdbcName}` = #{item.@{elem.javaName},jdbcType=@{elem.jdbcType}}
			</ourbatis:foreach>
	        where 
	        <ourbatis:foreach list="primaryColumns" var="elem" split=" and ">
				`@{elem.jdbcName}` = #{item.@{elem.javaName},jdbcType=@{elem.jdbcType}}
			</ourbatis:foreach>
        </foreach>
    </update>
	
     <!--根据主键批量删除-->
    <delete id="deleteBatch" parameterType="java.util.List"> 
        delete from @{tableName} where id in
        <foreach close=")" collection="list" index="index" item="item" open="(" separator=",">  
            #{item}  
        </foreach> 
    </delete>
 
  <!--根据某些条件删除-->
    <delete id="deleteByEntity" parameterType="@{domainClassName}"> 
        delete from @{tableName} where  1 = 1
        <ourbatis:foreach list="allColumns" var="elem" >
			<if test="@{elem.javaName} != null" >
	            and `@{elem.jdbcName}` = #{@{elem.javaName},jdbcType=@{elem.jdbcType}}
	        </if>
		</ourbatis:foreach>
    </delete>
    
    <ourbatis:ref path="classpath:ourbatis-mappers/@{domainSimpleClassName}.xml" />
</mapper>